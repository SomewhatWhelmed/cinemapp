    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_text_state_list</item>
        <item name="chipBackgroundColor">@color/chip_background_state_list</item>
        <item name="rippleColor">@color/md_theme_onPrimary</item>
        <item name="chipStrokeColor">@color/chip_text_state_list</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="color">@color/md_theme_tertiary</item>
    </style>

    <style name="Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_state_list</item>
        <item name="chipBackgroundColor">@color/chip_background_state_list</item>
        <item name="rippleColor">@color/md_theme_onPrimary</item>
        <item name="chipStrokeColor">@color/chip_text_state_list</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="color">@color/md_theme_tertiary</item>
        <item name="checkedIconTint">@color/md_theme_primary</item>
    </style>
    
    <style name="TabItem" parent = "Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextColor">@color/tab_text_state_list</item>
        <item name="tabRippleColor">@color/md_theme_onPrimary</item>
        <item name="tabIndicatorColor">@color/md_theme_onPrimary</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:backgroundTint">@color/md_theme_surface</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/md_theme_tertiary</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/md_theme_onPrimary</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="RadioButtonItem" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_secondary</item>
        <item name="buttonTint">@color/md_theme_onPrimary</item>
        <item name="buttonIcon">@drawable/selector_radio_button</item>
    </style>

</resources>